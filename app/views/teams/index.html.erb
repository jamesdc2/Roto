<h1>Listing teams</h1>

<table>
  <tr>
    <th>Team</th>
    <th>Name</th>
    <th>City</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.team_id %></td>
    <td><%= link_to team.name, { :controller => 'active_stats', :action => 'team', :id => team.team_id } %></td>
    <td><%= team.city %></td>
    <td><%= team.owner %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


